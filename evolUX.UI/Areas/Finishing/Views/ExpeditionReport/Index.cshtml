@using Shared.Models.Areas.evolDP
@using Shared.ViewModels.Areas.evolDP
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@inject IConfiguration configuration
@model BusinessViewModel

<div class="d-flex justify-content-center" >
    <div class="spinner-border" role="status" id="myLoader" style="display:none">
      <span class="sr-only">Loading...</span>
    </div>
</div>
 @{
    bool PrintFile = false;

    if (Model.Permissions.Find(x => x == "PrintFile") != null) { PrintFile = true; }
}
@if (Model == null)
{
    <div id="ResultPage">
        <h3 class="display-4 text-center">@localizer["NoModelData"]</h3>
    </div>
}
else
{
    string BusinessCodeLabel = localizer["BusinessCode"].Value;
    <div id="TitlePage">
        <h1>@localizer["ExpeditionReport"]</h1>
    </div>
    <table class="table table-sm table-hover table-collapse-seperate">
        <thead id="bootstrap-overrides" class="table-info sticky-header">
            <tr>
                <th class="evol-fitcontent-column" style="text-align:center">
                    <a asp-area="Finishing" asp-controller="ExpeditionReport" asp-action="ReportList" asp-route-CompanyBusinessValues="0|ALL|">
                        <img class="evol-image" style="width:50px;height:50px" src="~/images/bills_of_lading.png" title="@localizer["ExpeditionReportTip"]" />
                    </a>
                </th>
                <th style="vertical-align:middle">@localizer["Business"]</th>
            </tr>
        </thead>
        <tbody id="bootstrap-overrides">
            @foreach (Business c in Model.CompanyBusiness)
            {
                <tr>
                    <td style="text-align:center">
                        <a asp-area="Finishing" asp-controller="ExpeditionReport" asp-action="ReportList" asp-route-CompanyBusinessValues="@(c.BusinessID + "|" + c.BusinessCode + "|" + c.Description)">
                            <img class="evol-image" src="~/images/bill_lading.png" title="@localizer["ExpeditionReportTip"]: @c.Description" />
                        </a>
                    </td>
                    <td>@c.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
    


