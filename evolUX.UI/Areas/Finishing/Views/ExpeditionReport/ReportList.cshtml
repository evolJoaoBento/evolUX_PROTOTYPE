@using Shared.ViewModels.Areas.Finishing
@using Microsoft.AspNetCore.Mvc.Localization
@using Shared.Models.Areas.Finishing
@inject IViewLocalizer localizer
@model ExpeditionListViewModel

@section Scripts
{
    <script type="text/javascript">
        function refreshPage() {
            window.location.reload();
        };
        function MessageBox(msg) {
            alert(msg);
        }
    </script>
}
@{
    bool PrintFile = false;

    if (Model.Permissions.Find(x => x == "PrintFile") != null) { PrintFile = true; }
}
<div class="d-flex justify-content-center" >
    <div class="spinner-border" role="status" id="myLoader" style="display:none">
      <span class="sr-only">Loading...</span>
    </div>
</div>

@if (Model == null)
{
    <div id="ResultPage">
        <h3 class="display-4 text-center">@localizer["NoModelData"]</h3>
    </div>
}
else
{
    <div id="TitlePage">
        <h1>@localizer["ExpeditionReport"] @ViewBag.BusinessDescription</h1>
    </div>
    @if (Model.ExpeditionList.Count() == 0)
    {
        <h4 class="display-4 text-center">@localizer["EmptyResult"]</h4>
    }
    else
    {
        string Level0Name = "level";
        string Level1Name = "detail";
        string Level2Name = "expFile";
        string Level3Name = "expLevel";

        int level0 = 0;
        int level1 = 0;
        int level2 = 0;
        int level3 = 0;
        string idValue = "arrow" + level1.ToString();
        string nameValue = "";
        string fName = "";
        string fileName = "";
        string fLink = "";
        string rFilename = "";
        string rLink = "";

        int sum = 0;
        @foreach (ExpServiceCompanyFileElement s in Model.ExpeditionList)
        {
            level0++;
            nameValue = Level0Name + level0.ToString();
            idValue = "arrow" + nameValue;
            <table class="table table-bordered table-sm">
            <thead>
                @if (!ViewBag.hasMultipleServiceCompanies)
                {
                    <tr><th>@localizer["ExpeditionReportList"]</th></tr>
                }
                else
                {
                    <tr>
                        <th>@localizer["ExpeditionReportList"] [@s.ServiceCompanyName]
                            @if (Model.ExpeditionList.Count() > 0)
                            {
                                <a class="evol-arrow bx bxs-chevron-up" href="javascript:hideDetail('@nameValue')" id="@idValue"></a>
                            }
                        </th>
                    </tr>
                }
            </thead>
            <tbody id="@nameValue">
            @foreach (ExpCompanyFileElement c in s.ExpCompanyList)
            {
            @foreach (ExpBusinessFileElement b in c.BusinessList)
            {
                <tr><td>
                <table class="table table-bordered table-sm table-striped">
                @{
                    level1++;
                    nameValue = Level1Name + level1.ToString();
                    idValue = "arrow" + nameValue;
                }
                <thead>
                    @if (ViewBag.hasMultipleCompanyBusiness)
                    {
                        <tr>
                            <th colspan="7">
                                @c.ExpCompanyCode / @b.BusinessDescription
                                <a class="evol-arrow bx bxs-chevron-up" href="javascript:hideDetail('@nameValue')" id="@idValue"></a>
                            </th>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <th colspan="7">
                                @c.ExpCompanyCode
                                <a class="evol-arrow bx bxs-chevron-up" href="javascript:hideDetail('@nameValue')" id="@idValue">
                                </a>
                            </th>
                            </tr>
                    }
                </thead>
                <tbody id="@nameValue">
                    <tr>
                        <th>@localizer["ExpReportName"]</th>
                        <th>@localizer["Registred"]</th>
                        <th>@localizer["ReportTimeStamp"]</th>
                        <th>@localizer["ClientName"]</th>
                        <th>@localizer["ContractNr"]</th>
                        <th>@localizer["ClientNr"]</th>
                        <th>@localizer["ReportNr"]</th>
                    </tr>
                @foreach(ExpReportElement rp in b.ReportList)
                {
                    fileName = "";
                    fName = "XEXPREP_" + rp.ExpTime + "_" + rp.ExpReportID.ToString();
                    if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".pdf")) 
						fileName = fName + ".pdf";
					else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".xls")) 
						fileName = fName + ".xls";
					else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".doc")) 
    					fileName = fName + ".doc";
					else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".htm")) 
			        	fileName = fName + ".htm";
					else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".csv")) 
			        	fileName = fName + ".csv";

                    rFilename = "";
                    if (!string.IsNullOrEmpty(rp.ExpRegistReportID))
                    {
                        fName = "XREGREP_" + rp.ExpTime + "_" + rp.ExpRegistReportID;
                        if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".xls")) 
						    rFilename = fName + ".xls";
					    else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".doc")) 
    					    fileName = fName + ".doc";
					    else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".htm")) 
			        	    rFilename = fName + ".htm";
					    else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".csv")) 
			        	    rFilename = fName + ".csv";					    
					    else if (File.Exists(ViewBag.ExpFolder + "\\" + fName + ".txt")) 
			        	    rFilename = fName + ".txt";	
                    }
                    if (!string.IsNullOrEmpty(fileName))
                    {
                        fLink = ViewBag.ExpeditionURL + fileName;
                        rLink = ViewBag.ExpeditionURL + rFilename;
                    <tr>
                        <td>
                             <a target="_blank" href='@fLink'>@fileName</a>
                            @if(rp.ExpFileList.Count > 0)
                            {
                                level2++;
                                nameValue = Level2Name + level2.ToString();
                                idValue = "arrow" + nameValue;
                                sum = 0;
                                <a class="evol-arrow bx bxs-chevron-down" href="javascript:showDetail('@nameValue')" id="@idValue">
                                </a>                     
                                <table id="@nameValue"  class="table table-bordered table-sm table-striped" style="display: none">
                                    <thead>
                                       <tr>
                                            <th>@localizer["FileName"]</th>
                                            <th>@localizer["TotalPostalObjects"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(ExpFileInfo f in rp.ExpFileList)
                                        {
                                            sum = sum + f.TotalPostObjs;
                                            <tr>
                                                <td>
                                                    @f.FileName
                                                    @if (f.ExpCompanyLevels.Count > 0)
                                                    {
                                                        level3++;
                                                        nameValue = Level3Name + level3.ToString();
                                                        idValue = "arrow" + nameValue;
                                                        <a class="evol-arrow bx bxs-chevron-down" href="javascript:showDetail('@nameValue')" id="@idValue">
                                                        </a>
                                                        <table id="@nameValue"  class="table table-bordered table-sm table-striped" style="display: none">
                                                            <thead>
                                                                <tr>
                                                                    <th>@localizer["ExpCompanyLevel"]</th>
                                                                    <th>@localizer["MaxWeight"]</th>
                                                                    <th>@localizer["PostalObjects"]</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (ExpLevelInfo l in f.ExpCompanyLevels)
                                                                {
                                                                    <tr>
                                                                        <td>@l.ExpCompanyLevel</td>
                                                                        <td>@l.ExpeditionLevelDesc</td>
                                                                        <td>@l.PostalObjects</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </td>
                                                <td>@f.TotalPostObjs</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td>@localizer["Total"]</td>
                                            <td>@sum</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            }      
                        </td>
                        @if (!string.IsNullOrEmpty(rp.ExpRegistReportID) && File.Exists(ViewBag.ExpFolder + "\\" + rFilename))
                        {
                        <td><a target="_blank" href='@rLink'>@rp.ExpRegistReportID</td>
                        }
                        else
                        {
                        <td>@rp.ExpRegistReportID</td>
                        }
                        <td>@rp.ExpTimeStamp.ToString()</td>
                        <td>@rp.ExpContract.ClientName</td>
                        <td>@rp.ExpContract.ContractNr</td>
                        <td>@rp.ExpContract.ClientNr</td>
                        <td>@rp.ExpReportNr</td>
                    </tr>
                    }
                }
                </tbody>
                </table>
                </td>
                </tr>
            }
            }
            </table>
        }
    }
}


