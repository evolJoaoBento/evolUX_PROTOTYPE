@using Shared.Models.Areas.evolDP
@using Shared.ViewModels.Areas.evolDP
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model BusinessViewModel

<div class="d-flex justify-content-center" >
    <div class="spinner-border" role="status" id="myLoader" style="display:none">
      <span class="sr-only">Loading...</span>
    </div>
</div>
 
@if (Model == null)
{
    <div id="ResultPage">
        <h3 class="display-4 text-center">@localizer["NoModelData"]</h3>
    </div>
}
else
{
    <div id="TitlePage">
        <h1 class="display-4 text-center">@localizer["ExpeditionReport"]</h1>
    </div>
    <form id="ServiceCompaniesFrm" class="d-flex justify-content-center m-5" asp-area="Finishing" asp-controller="Expedition" asp-action="PendingExpeditionFiles">
        <table class="form-group d-flex justify-content-center" style="width: 50vw;position: relative; right: 40px;">
            <tr>
                <td><h4 class="text-center" style="color: var(--darkestgrey)">@localizer["Business"]</h4> </td>
            </tr>
            <tr>
                <td>
                    <select name="CompanyBusinessValues">
                        @foreach (Business c in Model.CompanyBusiness)
                        {
                            <option value="@(c.BusinessID + "|" + c.BusinessCode + "|" + c.Description)">@c.Description</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="d-flex justify-content-center m-4">
                    <input type="submit" value="@localizer["Submit"]" name="Submit" class="btn btn-block btn-outline-info" />
                </td>
            </tr>
        </table>
        <br />
    </form>
}
    


