@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="d-flex justify-content-center" >
    <div class="spinner-border" role="status" id="myLoader" style="display:none">
      <span class="sr-only">Loading...</span>
    </div>
</div>
<div id="TitlePage">
    <h1 class="display-4 text-center">@localizer["RegistTotalRecover"]</h1>
</div>

<form id="RegistTotalRecoverFrm" class="d-flex justify-content-center m-5" asp-area="Finishing" asp-controller="Recover" asp-action="RegistTotalRecover"
      data-ajax="true" 
      data-ajax-method="POST"
      data-ajax-mode="replace" 
      data-ajax-update="#response"
      data-ajax-complete="clearTextBox"
      data-ajax-loading="myLoader">
     <table class="form-group d-flex justify-content-center" style="width: 50vw;position: relative; right: 40px;">
          <tr>
            <td><h4 class="text-center" style="color: var(--darkestgrey)">@localizer["FileBarcode"]</h4> </td>
          </tr>
        <tr>
            <td>@Html.TextBox("FileBarcode","",htmlAttributes:new { @class="form-control", id="FileBarcode", type="password"})</td>
        </tr>
        <tr>
            <td class="d-flex justify-content-center m-4">
                <input type="submit" value="@localizer["Submit"]" name="Submit" class="btn btn-block btn-outline-info" />
            </td>
        </tr>
      </table>
    <br/>  
</form>
<div id="response" class="d-flex justify-content-center m-5"></div>

@section Scripts
    {
        <script type="text/javascript">
            function clearTextBox() {
                document.getElementById("RegistTotalRecoverFrm").reset();
                document.getElementById("FileBarcode").focus();
            };

            window.onload = (event) => {
                document.getElementById("FileBarcode").focus();
            };
        </script>

}