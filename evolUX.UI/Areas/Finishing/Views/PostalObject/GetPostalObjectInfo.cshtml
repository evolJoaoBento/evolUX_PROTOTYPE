@using Shared.Models.Areas.Finishing
@using Shared.ViewModels.Areas.Finishing
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@model PostalObjectViewModel

@*https://www.w3.org/WAI/tutorials/tables/irregular/  https://datatables.net/extensions/buttons/examples/column_visibility/index.html*@

<div class="d-flex justify-content-center" >
    <div class="spinner-border" role="status" id="myLoader" style="display:none">
      <span class="sr-only">Loading...</span>
    </div>
</div>
<div class="my-3">
    <table class="table table-sm table-bordered">
        <colgroup span="3"></colgroup>
        <col>
        <col>
        <thead>
            <tr>
                <th colspan="3" scope="colgroup">@localizer["File"]</th>
                <th rowspan="2" scope="colgroup">@localizer["PostObjID"]</th>
                <th rowspan="2" scope="colgroup">@localizer["SequenceNumber"]</th>
                <th rowspan="2" scope="colgroup">@localizer["FirstSheetSequenceNumber"]</th>
            </tr>
            <tr>
                <th scope="row">@localizer["PostObjRunID"]</th>
                <th scope="row">@localizer["PostObjFileID"]</th>
                <th scope="row">@localizer["FileName"]</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                    <tr><td colspan="5" class="text-center">No Model Data</td></tr>
            }
            else
            {
                <tr>
                    <td>@Model.PostalObject.PostObjRunID</td>
                    <td>@Model.PostalObject.PostObjFileID</td>
                    <td>@Model.PostalObject.FileName</td>
                    <td>@Model.PostalObject.PostObjID</td>
                    <td>@Model.PostalObject.SequenceNumber</td>
                    <td>@Model.PostalObject.FirstSheetSequenceNumber</td>
                </tr>
            }
        </tbody>
    </table>

</div>



