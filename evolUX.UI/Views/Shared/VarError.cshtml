@using Shared.ViewModels.Areas.Core
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<style>
    .alert {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border: 5px solid #f5c6cb;
        border-radius: 4px;
        display: inline-block;
        margin: 20px auto;
        font-size: 16px;
    }
</style>

@if (Model?.ShowRequestID ?? false)
{
    <environment names="Development">
        <div class="alert">
            Message: @Model?.ErrorResult?.Message
            <button class="popup-button" onclick="closeAlert()">OK</button>
        </div>
    </environment>
}

<script>
    function closeAlert() {
        var alertElement = document.querySelector('.alert');
        alertElement.style.display = 'none';
    }
</script>